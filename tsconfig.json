{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@app": ["app/Application"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "exclude": ["node_modules"]
}
